<h2>
  コメント
</h2>
<div class="row">
  <div class="col s12">
    <ol>
      <% @comments.each do |comment| %>
      <li>
        <div>
          <%= comment.username %>
        </div>
        <div class="row">
          <div class="col s12 wrap"><%= comment.body %></div>
        </div>
        <div class="row">
          <div class="col s12">
            <%= I18n.l(comment.created_at) %>
          </div>
        </div>
      </li>
      <% end %>
    </ol>
    <%= form_for @comment, method: 'POST' do |f| %>
      <div class="row">
        <div class="input-field col s12">
          <%= f.label I18n.t('activerecord.attributes.comment.username') %>
          <%= f.text_field :username %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <%= f.label I18n.t('activerecord.attributes.comment.body') %>
          <%= f.text_area :body %>
          <%= hidden_field_tag :article_id, @article.id %>
        </div>
      </div>
      <%= f.submit '送信', class: 'btn-large blue waves-effect waves-light' %>
    <% end %>
  </div>
</div>