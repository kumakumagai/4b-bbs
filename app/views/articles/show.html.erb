<h1 class="blue-text">
  記事詳細
</h1>
<div class="row">
  <div class="col s3">
    <%= I18n.t('activerecord.attributes.article.title') %>
  </div>
  <div class="col s9">
    <%= @article.title %>
  </div>
</div>
<div class="row">
  <div class="col s3">
    <%= I18n.t('activerecord.attributes.article.body') %>
  </div>
  <div class="col s9">
    <div class="wrap"><%= @article.body %></div>
  </div>
</div>
<div class="row">
  <div class="col s3">
    <%= I18n.t('activerecord.attributes.article.created_at') %>
  </div>
  <div class="col s9">
    <%= I18n.l(@article.created_at) %>
  </div>
</div>
<div class="row">
  <div class="col s3">
    <%= I18n.t('activerecord.attributes.article.updated_at') %>
  </div>
  <div class="col s9">
    <%= I18n.l(@article.updated_at) %>
  </div>
</div>

<% if user_signed_in? %>
  <div class="row">
    <%= link_to '編集', edit_article_path(@article), class: 'btn-large waves-effect waves-light blue first-link left' %>
    <div class="left">
      <%= form_for @article, method: 'DELETE' do |f| %>
          <%= f.submit '削除', class: 'btn-large waves-effect waves-light red lighten-2' %>
      <% end %>
    </div>
  </div>
<% end %>

<div class="row">
  <%= link_to '記事一覧', articles_path %>
</div>


