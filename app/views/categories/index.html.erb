<h1 class="blue-text">
  カテゴリー一覧
</h1>
<a href="<%= new_category_path %>"
   class="btn-floating btn-large waves-effect waves-light green right"
   title="カテゴリー作成">
  <i class="material-icons">
    add
  </i>
</a>
<table class="highlight">
  <thead>
  <tr>
    <th><%= I18n.t('activerecord.attributes.category.name') %></th>
    <th><%= I18n.t('activerecord.attributes.category.created_at') %></th>
  </tr>
  </thead>
  <tbody>
  <% @categories.each do |category| %>
      <tr>
        <td>
          <%= link_to category.name, category_path(category) %>
        </td>
        <td>
          <%= I18n.l(category.created_at) %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<div class="center">
  <%= paginate @categories %>
</div>
