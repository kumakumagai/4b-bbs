<% if @tag.errors.any? %>
    <div class="card-panel red white-text">
      <ul>
        <% @tag.errors.full_messages.each do |m| %>
            <li><%= m %></li>
        <% end %>
      </ul>
    </div>
<% end %>
<%= form_for @tag, method: method, class: 'col s12' do |f| %>
    <div class="row">
      <%= f.label :name, class: 'blue-text' %>
      <%= f.text_field :name %>
    </div>
    <div class="row">
      <%= f.submit button_title, class: 'btn-large waves-effect waves-light blue' %>
    </div>
<% end %>